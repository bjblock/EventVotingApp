<%= form_for(@vote) do |f| %>
	<%= f.hidden_field "event_id", :value => event.id %>
	<%= f.hidden_field "user_id", :value => @user.id %>
	<%= f.label :score, 'Rating' %>: <%= f.select :score, [1,2,3,4,5] %> |
	<%= f.label :comment %>: <%= f.text_field :comment %> 
	<%= submit_tag "Vote!" %>
<% end %>