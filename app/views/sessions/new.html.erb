<div class="row">
	<div class="twelve columns">
		<div class="five columns">
			<div class="panel">
				<h2>
					Sign In Here!
				</h2>
				<p class="notice">
					<strong><%= notice %></strong>
				</p>
				
				<%= form_tag sessions_url do %>
					<p>
						<%= label_tag :email %><br>
						<%= text_field_tag :email %>
					</p>
					<p>
						<%= label_tag :password %><br>
						<%= password_field_tag :password %>
					</p>
					<p>
						<%= submit_tag 'Sign In' %>
					</p>
				<% end %>
				
			</div>
		</div>
	</div>
</div>
